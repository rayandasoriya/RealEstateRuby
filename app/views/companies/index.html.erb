<%= render "partials/navbar" %>
<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Companies</h1>

  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Website</th>
        <th>Address</th>
        <th>Size</th>
        <th>Revenue</th>
        <th>Synopsis</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td><%= company.id %></td>
          <td><%= company.name %></td>
          <td><%= company.website %></td>
          <td><%= company.address %></td>
          <td><%= company.size %></td>
          <td><%= company.revenue %></td>
          <td><%= company.synopsis %></td>

          <% if current_user.is_admin || (current_user.is_realtor && session[:role] == 'realtor' && current_user.company_id == company.id)%>
            <td><%= link_to 'Edit', edit_company_path(company) %></td>
          <%end %>
          <% if current_user.is_admin %>
            <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <% if session[:role] != 'hunter' %>
    <%= link_to 'New Company', new_company_path, :class => "btn btn-success" %>
  <% end %>
</div>
